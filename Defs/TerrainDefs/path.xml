<Defs>
	<!-- (base) Dirt path -->
	<TerrainDef Name="pathBase" ParentName="FloorBase">
		<defName>dirtPath</defName>
		<label>dirt path</label>
		<description>A simple dirt path.</description>
		<texturePath>Terrain/Surfaces/dirtPath</texturePath>
		<designationCategory>NaturalPaths</designationCategory>
		<edgeType>FadeRough</edgeType>
		<renderPrecedence>350</renderPrecedence>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
		<takeFootprints>true</takeFootprints>
		<statBases>
			<Beauty>0</Beauty>
			<WorkToBuild>150</WorkToBuild>
			<FilthMultiplier>0</FilthMultiplier>
		</statBases>
		<costList><!-- nothing --></costList>
	</TerrainDef>
